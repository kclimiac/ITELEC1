       if (num1 > num2) {
            result = num1 + num2;
            System.out.println(num1 + " + " + num2 + " = " + result);
        } 
          
        else if (num1 == num2) {
            result = num1 * num2;
            System.out.println(num1 + " * " + num2 + " = " + result);
        } 
      
